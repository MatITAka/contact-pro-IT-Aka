<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Groupes</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center">
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Liste des Groupes</h1>
    <div class="mb-4 text-right">
        <a href="/api/group/create" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Créer un Groupe</a>
    </div>
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full table-auto border-collapse border border-gray-200">
            <thead class="bg-gray-200">
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left">Nom du Groupe</th>
                <th class="px-4 py-2 border border-gray-300 text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% groups.forEach(group => { %>
                <tr class="hover:bg-gray-100">
                    <td class="px-4 py-2 border border-gray-300"><%= group.name %></td>
                    <td class="px-4 py-2 border border-gray-300 text-center">
                        <a href="/api/group/list/<%= group._id %>" class="text-blue-500 hover:underline">Détails</a> |
                        <a href="/api/group/update/<%= group._id %>" class="text-green-500 hover:underline">Modifier</a> |
                        <form action="/api/group/delete/<%= group._id %>" method="POST" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="text-red-500 hover:underline" onclick="return confirm('Confirmer la suppression ?')">Supprimer</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
    <div class="mt-8">
        <div class="mt-4">
            <a href="/api/contact/list" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Page des contacts</a>
        </div>
    </div>
</div>
</body>
</html>