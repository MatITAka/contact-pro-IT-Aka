<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier le Contact</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center">
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Modifier le Contact</h1>
    <form action="/api/contact/update/<%= contact._id %>" method="POST" class="bg-white shadow-md rounded-lg p-6">
        <input type="hidden" name="_method" value="PUT">
        <div class="mb-4">
            <label for="firstName" class="block text-gray-700 font-bold mb-2">Prénom :</label>
            <input type="text" id="firstName" name="firstName" value="<%= contact.firstName %>" class="w-full border border-gray-300 rounded px-3 py-2">
        </div>
        <div class="mb-4">
            <label for="lastName" class="block text-gray-700 font-bold mb-2">Nom :</label>
            <input type="text" id="lastName" name="lastName" value="<%= contact.lastName %>" class="w-full border border-gray-300 rounded px-3 py-2">
        </div>
        <div class="mb-4">
            <label for="company" class="block text-gray-700 font-bold mb-2">Société :</label>
            <input type="text" id="company" name="company" value="<%= contact.company %>" class="w-full border border-gray-300 rounded px-3 py-2">
        </div>
        <div class="mb-4">
            <label for="email" class="block text-gray-700 font-bold mb-2">Email :</label>
            <input type="email" id="email" name="email" value="<%= contact.email %>" class="w-full border border-gray-300 rounded px-3 py-2">
        </div>
        <div class="mb-4">
            <label for="adress" class="block text-gray-700 font-bold mb-2">Adresse :</label>
            <input type="text" id="adress" name="adress" value="<%= contact.adress %>" class="w-full border border-gray-300 rounded px-3 py-2">
        </div>
        <div class="mb-4">
            <label for="phone" class="block text-gray-700 font-bold mb-2">Téléphone :</label>
            <input type="text" id="phone" name="phone" value="<%= contact.phone %>" class="w-full border border-gray-300 rounded px-3 py-2">
        </div>
        <div class="mb-4">
            <label for="sector" class="block text-gray-700 font-bold mb-2">Secteur :</label>
            <input type="text" id="sector" name="sector" value="<%= contact.sector %>" class="w-full border border-gray-300 rounded px-3 py-2">
        </div>
        <div class="mb-4">
            <label for="groups" class="block text-gray-700 font-bold mb-2">Groupe :</label>
            <select id="groups" name="groups" class="w-full border border-gray-300 rounded px-3 py-2">
                <% groups.forEach(group => { %>
                    <option value="<%= group._id %>" <%= contact.groups && contact.groups.includes(group._id.toString()) ? 'selected' : '' %>>
                        <%= group.name %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="text-right">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Enregistrer</button>
        </div>
    </form>
</div>
</body>
</html>