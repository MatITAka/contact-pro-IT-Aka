<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Contacts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center">
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Liste des Contacts</h1>
    <div class="mb-4 text-right">
        <a href="/api/contact/create" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Créer un Contact</a>
    </div>
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
        <table class="min-w-full table-auto border-collapse border border-gray-200">
            <thead class="bg-gray-200">
            <tr>
                <th class="px-4 py-2 border border-gray-300 text-left">Nom</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Société</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Email</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Adresse</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Téléphone</th>
                <th class="px-4 py-2 border border-gray-300 text-left">Secteur</th>
                <th class="px-4 py-2 border border-gray-300 text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% contacts.forEach(contact => { %>
                <tr class="hover:bg-gray-100">
                    <td class="px-4 py-2 border border-gray-300"><%= contact.firstName %> <%= contact.lastName %></td>
                    <td class="px-4 py-2 border border-gray-300"><%= contact.company %></td>
                    <td class="px-4 py-2 border border-gray-300"><%= contact.email %></td>
                    <td class="px-4 py-2 border border-gray-300"><%= contact.adress %></td>
                    <td class="px-4 py-2 border border-gray-300"><%= contact.phone %></td>
                    <td class="px-4 py-2 border border-gray-300"><%= contact.sector %></td>
                    <td class="px-4 py-2 border border-gray-300 text-center">
                        <a href="/api/contact/list/<%= contact._id %>" class="text-blue-500 hover:underline">Détails</a> |
                        <a href="/api/contact/update/<%= contact._id %>" class="text-green-500 hover:underline">Modifier</a> |
                        <form action="/api/contact/delete/<%= contact._id %>" method="POST" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="text-red-500 hover:underline" onclick="return confirm('Confirmer la suppression ?')">Supprimer</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
    <div class="mt-8">
    <a href="/api/group/list" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Page de groupe</a>
    </div>
</div>
</body>
</html>